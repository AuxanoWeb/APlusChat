<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AuxanoChatSDK" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AuxanoChatSDK.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AuxanoChatSDK.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AuxanoChatSDK.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="editTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="android:background">@drawable/bg_search_solid_rectangle</item>
    </style>
    <style name="textViewTitle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="textViewTitleBlue" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/colorTextUrl</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="textViewHeadingTitle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="textViewSubTitle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/colorIconBGGrey</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="textViewSubTitleBlue" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="textViewNormal" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="textViewNormalBlack" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="textWhiteColor" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="textBlackColor" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="textRedColor" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="textBlueColor" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorBackGroundText</item>
    </style>
    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/white</item> <!-- Whatever color you want-->
    </style>
    <style name="textOnBackgroundBold18">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>
    <style name="textOnPrimaryBold12">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/colorDialogueOnPrimary</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>
    <style name="allButtonStyle" parent="textOnPrimaryBold12">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_maroon_radius</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>
</resources>