<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp">

    <RelativeLayout
        android:id="@+id/imageDialogueTopLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/downloadimgshowdialogue"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_download_2" />

        <ImageView
            android:id="@+id/closeimgshowdialogue"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_close_btn_blue" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/dialogueshowimg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageDialogueTopLayout"
        android:layout_marginTop="@dimen/_5sdp" />

</RelativeLayout>