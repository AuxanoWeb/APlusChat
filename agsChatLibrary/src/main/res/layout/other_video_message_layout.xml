<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/dateOtherVideoMessagelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/centerTimeOtherVideoMessagetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/center_message_bubble"
            android:padding="@dimen/_5sdp"
            android:text="December 7,2022"
            android:textColor="@color/colorTextLabel"
            android:textSize="@dimen/_14sdp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateOtherVideoMessagelayout"
        android:layout_alignParentLeft="true"
        android:id="@+id/otherVideoMainLayout"
        android:layout_marginTop="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/VideoOtherChatMainLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/other_message_bubble"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pervUserNameOtherVideo"
                style="@style/textBlueColor"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:fontFamily="@font/opensans_semibold"
                android:includeFontPadding="false"
                android:text="Parth bhatt"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_180sdp"
                android:padding="@dimen/_2sdp">

                <ImageView
                    android:id="@+id/prevVideoOtherIV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_5sdp"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/play_btn"
                    app:tint="@color/colorDarkGrey" />
            </RelativeLayout>


            <TextView
                android:id="@+id/txtVideoOtherMessageTime"
                style="@style/textViewNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="12:00 PM"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>