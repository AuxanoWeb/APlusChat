<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/selectUserCreateGroupMainLayout"
    android:layout_height="@dimen/_60sdp"
    android:orientation="horizontal">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_centerVertical="true"
        android:id="@+id/chkCreateGroup"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/createGroupUserListProfile"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_55sdp"
        android:layout_toRightOf="@id/chkCreateGroup"
        android:padding="@dimen/_5sdp" />

    <TextView
        android:id="@+id/tvCreateGroupMemberName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_toRightOf="@id/createGroupUserListProfile"
        android:text="Parth Bhatt"
        android:textColor="@color/colorDarkGrey"
        android:textSize="@dimen/_16sdp" />

</RelativeLayout>